	<% show_post ||= false %>

	<div class="span0 well text-center">
		<%= link_to vote_post_comment_path(comment.post, comment, vote: true) method: 'post' do %>
			<i class="icon-arrow-up"></i>
		<% end %>
		
		<br/>
		
		<%= comment.total_votes %>votes
		
		<br/>
		
		<%= link_to vote_post.comment_path(comment.post,comment, vote: false) %>
		<i class='icon-arrow-down'></i>
		
		<em>"<%= comment.body %>"</em>
		
		<br/>
		<% if show_post %>
		on <%= link_to comment.post.title, post_path(comment.post) %>
		<% end %>
		<br/>
		<span class='quiet'>by</span><%= comment.creator.username, user_path(comment.creator) %>
			<small>at <%= display_datetime(comment.created_at) %></small>
	</div>

